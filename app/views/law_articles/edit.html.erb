<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <%= simple_form_for([@law, @law_article]) do |f| %>
        <%= f.error_notification %>
        <% @law_article.updated_code_articles.each do |code_article| %>
          <%= f.input code_article.content %>
        <% end %>
        <ul class="list-inline text-center">
          <li><%= f.button :submit, value: "Enregistrer", class: "center-block btn btn-success" %></li>
        </ul>
      <% end %>
    </div>
  </div>
</div>

  <!-- we specify the new custom input, and we'll use the 'thumb' version of the carrierwave upload -->
  <%#= f.input :image, :as => :image_preview, :input_html => {:preview_version => :thumb} %>
<%# end %>