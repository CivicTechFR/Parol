<div class="container">

  <div class="row">
    <div class="col-xs-7 padded">


      <h1><%= @law.title %></h1>
      <p><%= @law.description %></p>

      <!-- on a besoin de la liste des articles concernÃ©s par la loi  -->
      <!-- leur titre + leur url (qui redirige vers l'amendment/show -->

      <% @law.amendments.each do |amendment| %>
      <ul>
        <li>
          <%= link_to amendment.title, law_amendment_path(@law, amendment), class: "list-article" %>
          <% end %>
        </li>
      </ul>
    </div>


    <div class="col-xs-5 padded">
      <br>
      <br>
      <h4>En savoir plus</h4>
      <%= link_to 'http://www.education.gouv.fr/cid72962/publication-de-la-loi-d-orientation-et-de-programmation-pour-la-refondation-de-l-ecole.html' do %>
      <%= image_tag 'ecole.jpg', size: '420x200' %>
      <% end %>
    </div>

  </div>
</div>